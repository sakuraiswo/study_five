<h1>トップページ</h1>

<div class="room-create-link">
<%= link_to "Create Room", new_room_path %>
</div>

<br><br>

<% @rooms.each do |room| %>
  <div class="room-list">
    <div class="room-link">
      ・<%= link_to room.room_name, room_path(room) %>
    </div>
    <div class="room-link">
      <%= "☆" if room.has_low_study_count_question_answer? %>
    </div>
    <div class="room-edit-link">
      <%= link_to "Edit", edit_room_path(room) %>
    </div>
    <div class="room-delete-link">
      <%= link_to "Delete", room_path(room), data: { turbo_method: :delete, turbo_confirm: "このルーム内のQ&Aもすべて無くなりますが、削除してよろしいですか？"} %>
    </div>
  </div>
<% end %>